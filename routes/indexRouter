indexRouter.get('/new', (req, res) => {
    res.render('form')
})

indexRouter.post('/new', (req, res) => {
    messages.push({
        text: req.body.messageText,
        user: req.body.name,
        added: new Date()
    })
    res.redirect('/')
})

